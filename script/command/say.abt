
entity command.say {
	cmd.keyword "say", "talk", "speak", "ask"
	cmd.help "**say**: Say something"

	cmd.select (Line) {
		room *Player Room
		room Actor Room
		line Line Actor Text
	}

	cmd.do (Line) {
		line Line Actor Text
	} -> {
		print: "**you**: {name:Line}"
		print: "**{name:Actor}**: {Text}"
	}

}


