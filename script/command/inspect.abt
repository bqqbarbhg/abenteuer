
entity inspect {
	cmd.keyword "inspect", "stare at"
	cmd.abbrev "i" "inspect"
	cmd.help "**inspect**: Inspect finer details of objects"

	cmd.select (Thing) {
		object Thing
	}

	cmd.do (Thing) {
		name Thing Name
		desc Thing Desc
	} -> {
		print: "**{Name}**"
		print: Desc
	}

	cmd.do (Thing) {
		flavor Thing Text
	} -> {
		print: Text
	} 5
}

